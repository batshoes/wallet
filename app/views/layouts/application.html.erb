<!DOCTYPE html>
<html>
<head>
  <title>Wallet</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if current_user %>
    <div>
      <p class="nav"><%= link_to "| Log Out |", '/logout', method: :delete %></p>
    </div>
  <% else %>
    <div class="form">
      <%= form_tag '/sessions' do%>
        <%= text_field_tag :username, nil, placeholder: "Username", class: 'input' %>
        <%= password_field_tag :password, nil, placeholder: "Password", class: 'input' %>
        <%= submit_tag "Sign In", class: "button" %>
      <% end %>
    </div>  
  <% end %>
</header>
  <% if flash[:alert] || flash[:notice]%>
    <%= flash[:alert]%>
    <%= flash[:notice] %>
  <% end %>

<%= yield %>

</body>
</html>
