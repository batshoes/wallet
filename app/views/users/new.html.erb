
  
  <% if !current_user %>
<div class="form">
  <%= flash[:notice] if flash[:notice] %>
  <%= flash[:alert] if flash[:alert] %>
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      <% end %>
    
    <%= f.text_field :username, placeholder: 'Username', class: 'input' %>
    <%= f.password_field :password, placeholder: 'Password', class: 'input' %>
    <%= f.text_field :fname, {placeholder: 'First Name'} %>
    <%= f.text_field :lname, {placeholder: 'Last Name'} %>
    <%= f.text_field :email, {placeholder: 'Email Address'} %>
    <%= f.text_field :phone, {placeholder: 'Phone Number xxx-xxx-xxxx'} %>
    <%= f.hidden_field :balance, {placeholder: 'Monies'} %>
    <%= submit_tag "Sign Up", class: 'button' %>
  <% end %>
</div>
<% end %>